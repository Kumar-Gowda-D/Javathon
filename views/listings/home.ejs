<% layout('layouts/boilerplate') -%>

<div class="main-content">
    <div class="hero-section">
        <h1 class="hero-title">Welcome to <span class="highlight">Smile</span></h1>
        <p class="hero-subtitle">Empowering Minds, Inspiring Futures</p>
        <div class="cta-container">
            <a href="/home/main"><button class="cta-btn">Get Started</button></a>
            <a href="/home/discover"><button class="cta-btn secondary">Discover More</button></a>
        </div>
    </div>

    <div class="features-section">
        <div class="feature-card">
            <div class="icon">
                <i class="fa-solid fa-code"></i>
            </div>
            <h3>Innovative Learning</h3>
            <p>Explore engaging and interactive lessons.</p>
        </div>
        <div class="feature-card">
            <div class="icon">
                <i class="fa fa-laptop"></i>
            </div>
            <h3>Hands-On Practice</h3>
            <p>Master skills with real-world projects.</p>
        </div>
        <div class="feature-card">
            <div class="icon">
                <i class="fa fa-globe"></i>
            </div>
            <h3>Global Community</h3>
            <p>Connect and learn with peers worldwide.</p>
        </div>
    </div>
</div>

<div class="moving-words">
    <pre>Smile Platform - Learn. Practice. Excel.     | Join Us Today! |     Empowering Tomorrow's Leaders!</pre>
</div>
<style>
.main-content {
    padding-bottom: 100px; 
}

.moving-words {
    color: #fff;
    font-size: 18px;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    padding: 10px 0;
}

.moving-words pre {
    display: inline-block;
    animation: marquee 10s linear infinite;
}

@keyframes marquee {
    0% {
        transform: translateX(100%);
    }
    100% {
        transform: translateX(-100%);
    }
}
</style>
