                <button class="level" style="--x: 64.7%; --y: 37%;" title="Cloud Migration">10</button>
                <button class="level" style="--x: 36%; --y: 32%;" title="Hybrid Cloud">11</button>
                <button class="level" style="--x: 18%; --y: 25.8%;" title="Edge Computing">12</button>
                <button class="level" style="--x: 38.5%; --y: 19%;" title="Cloud Monitoring">13</button>
                <button class="level" style="--x: 71.3%; --y: 15.15%;" title="Case Studies">14</button>
                <button class="level" style="--x: 88%; --y: 5%;" title="Advanced Topics">15</button>

            </div>
        </div>
    </div>
    
    <button class="dark-mode-button" onclick="toggleDarkMode()"><span class="material-symbols-outlined">
        routine</span></button>

    <audio autoplay loop>
        <source src="sounds/aboveground_bgm.ogg" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>

    <div id="popup-box" class="popup" style="display: none; position: absolute; background: rgba(0, 0, 0, 0.7); color: white; padding: 5px; border-radius: 5px; pointer-events: none;">Hello Hi</div>

